{
    "openapi": "3.0.1",
    "info": {
        "title": "CallX API",
        "description": "REST API for managing outbound calls and customer interactions with AI assistants",
        "version": "1.0.0",
        "license": {
            "name": "MIT"
        }
    },
    "servers": [
        {
            "url": "https://call-x-git-dev-blockstarsorg.vercel.app",
            "description": "Development server"
        }
    ],
    "tags": [
        {
            "name": "Calls",
            "description": "Operations related to outbound calls"
        },
        {
            "name": "Call Logs",
            "description": "Operations for managing call logs and related data"
        }
    ],
    "paths": {
        "/api/v1/calls": {
            "post": {
                "tags": ["Calls"],
                "summary": "Create a new outbound call",
                "description": "Initiates a new outbound call using the specified phone number and assistant configuration",
                "operationId": "createOutboundCall",
                "requestBody": {
                    "description": "Call details required to create a new outbound call",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewCall"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Call created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CallResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request or validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/call-logs": {
            "get": {
                "tags": ["Call Logs"],
                "summary": "List all call logs",
                "description": "Retrieves a list of all call logs with their associated data",
                "operationId": "getCallLogs",
                "responses": {
                    "200": {
                        "description": "Call logs retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/CallLog"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request or validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/call-logs/{id}/transcriptions": {
            "get": {
                "tags": ["Call Logs"],
                "summary": "Get call transcription",
                "description": "Retrieves the transcription for a specific call log",
                "operationId": "getCallTranscription",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "The ID of the call log",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "required": false,
                        "description": "Response format (text for plain text, omit for JSON)",
                        "schema": {
                            "type": "string",
                            "enum": ["text"]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transcription retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Transcription"
                                }
                            },
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "description": "Plain text transcription"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Call log or transcription not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/call-logs/{id}/summary": {
            "get": {
                "tags": ["Call Logs"],
                "summary": "Get call summary",
                "description": "Retrieves the AI-generated summary for a specific call log",
                "operationId": "getCallSummary",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "The ID of the call log",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "required": false,
                        "description": "Response format (text for plain text, omit for JSON)",
                        "schema": {
                            "type": "string",
                            "enum": ["text"]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Summary retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Summary"
                                }
                            },
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "description": "Plain text summary"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Call log or summary not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Assistant": {
                "type": "object",
                "required": ["assistantId"],
                "properties": {
                    "assistantId": {
                        "type": "string",
                        "description": "Unique identifier for the Assistant making the call"
                    },
                    "firstMessage": {
                        "type": "string",
                        "description": "Initial message to be sent to the customer"
                    },
                    "systemPrompt": {
                        "type": "string",
                        "description": "System prompt defining assistant behavior"
                    }
                }
            },
            "Customer": {
                "type": "object",
                "required": ["number"],
                "properties": {
                    "number": {
                        "type": "string",
                        "description": "Customer's phone number in E.164 format (e.g., +1234567890)"
                    }
                }
            },
            "NewCall": {
                "type": "object",
                "required": ["phoneNumberId", "customer"],
                "properties": {
                    "phoneNumberId": {
                        "type": "string",
                        "description": "Unique identifier for the phone number making the call"
                    },
                    "customer": {
                        "$ref": "#/components/schemas/Customer"
                    },
                    "assistant": {
                        "$ref": "#/components/schemas/Assistant"
                    }
                }
            },
            "CallResponse": {
                "type": "object",
                "required": ["callSid", "accountSid", "callLogId", "to", "from", "status", "direction"],
                "properties": {
                    "callSid": {
                        "type": "string",
                        "description": "Unique identifier for the call"
                    },
                    "accountSid": {
                        "type": "string",
                        "description": "Account identifier associated with the call"
                    },
                    "callLogId": {
                        "type": "string",
                        "description": "Unique identifier for the call log"
                    },
                    "to": {
                        "type": "string",
                        "description": "Destination phone number"
                    },
                    "from": {
                        "type": "string",
                        "description": "Source phone number"
                    },
                    "status": {
                        "type": "string",
                        "enum": ["queued"],
                        "description": "Current status of the call"
                    },
                    "direction": {
                        "type": "string",
                        "enum": ["outbound-api"],
                        "description": "Direction of the call"
                    }
                }
            },
            "CallLog": {
                "type": "object",
                "required": [
                    "callSid",
                    "assistantId",
                    "userId",
                    "streamSid",
                    "accountSid",
                    "caller",
                    "phoneNumber",
                    "startTime",
                    "endTime"
                ],
                "properties": {
                    "callSid": {
                        "type": "string",
                        "description": "Unique identifier for the call session"
                    },
                    "assistantId": {
                        "type": "string",
                        "description": "MongoDB ObjectId reference to the assistant"
                    },
                    "userId": {
                        "type": "string",
                        "description": "Identifier for the user associated with the call"
                    },
                    "streamSid": {
                        "type": "string",
                        "description": "Identifier for the call stream"
                    },
                    "accountSid": {
                        "type": "string",
                        "description": "Account identifier associated with the call"
                    },
                    "caller": {
                        "type": "string",
                        "description": "Phone number of the caller"
                    },
                    "callerCountry": {
                        "type": "string",
                        "description": "Country code of the caller"
                    },
                    "phoneNumber": {
                        "type": "string",
                        "description": "Phone number used for the call"
                    },
                    "startTime": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the call started"
                    },
                    "endTime": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the call ended"
                    },
                    "duration": {
                        "type": "number",
                        "description": "Duration of the call in seconds"
                    },
                    "costInCents": {
                        "type": "number",
                        "description": "Total cost of the call in cents"
                    },
                    "endedReason": {
                        "type": "string",
                        "description": "Reason why the call ended"
                    },
                    "hangupReason": {
                        "type": "string",
                        "description": "Specific reason for call hangup"
                    },
                    "messages": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "description": "Messages exchanged during the call"
                        }
                    },
                    "tokenUsage": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "description": "Token usage records"
                        }
                    },
                    "callType": {
                        "type": "string",
                        "description": "Type or category of the call"
                    },
                    "summary": {
                        "type": "string",
                        "description": "Brief summary of the call"
                    }
                }
            },
            "Transcription": {
                "type": "object",
                "required": ["id", "callLogId", "transcript", "createdAt"],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the transcription"
                    },
                    "callLogId": {
                        "type": "string",
                        "description": "ID of the associated call log"
                    },
                    "transcript": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["speaker", "text", "timestamp"],
                            "properties": {
                                "speaker": {
                                    "type": "string",
                                    "enum": ["assistant", "customer"],
                                    "description": "The speaker (assistant or customer)"
                                },
                                "text": {
                                    "type": "string",
                                    "description": "The transcribed text"
                                },
                                "timestamp": {
                                    "type": "string",
                                    "format": "date-time",
                                    "description": "Timestamp of when this part was spoken"
                                }
                            }
                        },
                        "description": "Array of transcribed segments with speaker information"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "When the transcription was created"
                    }
                }
            },
            "Summary": {
                "type": "object",
                "required": ["id", "callLogId", "summary", "createdAt"],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the summary"
                    },
                    "callLogId": {
                        "type": "string",
                        "description": "ID of the associated call log"
                    },
                    "summary": {
                        "type": "string",
                        "description": "Generated summary of the call"
                    },
                    "keyPoints": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Key points extracted from the conversation"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "When the summary was created"
                    }
                }
            },
        "Error": {
            "type": "object",
            "required": [
                "error",
                "message"
            ],
            "properties": {
                "error": {
                    "type": "integer",
                    "format": "int32",
                    "description": "Error code"
                },
                "message": {
                    "type": "string",
                    "description": "Error message describing what went wrong"
                }
            }
        }
    },
    "securitySchemes": {
        "bearerAuth": {
            "type": "http",
            "scheme": "bearer"
        }
    }
}